{
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "useTabs": false,
        "printWidth": 100,
        "tabWidth": 4,
        "parser": "html",
        "htmlWhitespaceSensitivity": "strict",
        "singleAttributePerLine": true,
        "bracketSameLine": false
      }
    },
    {
      "files": "*.js",
      "options": {
        "useTabs": true,
        "printWidth": 80,
        "tabWidth": 4
      }
    },
    {
      "files": "*.js",
      "options": {
        "useTabs": true,
        "printWidth": 100,
        "tabWidth": 4
      }
    }
  ]
}
